<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#fff"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="FILTER DATA"/>
            <ImageView
                android:id="@+id/if_iv_close"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_filter"/>
        </LinearLayout>

        <TextView
            android:id="@+id/if_instrumen"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#707070"
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Instrumen"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:id="@+id/if_tampil"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/if_tv_tanggal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#707070"
                android:gravity="center|left"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="----------"/>
            <Button
                android:id="@+id/if_bt_tanggal"
                android:layout_weight="3"
                android:textColor="#fff"
                android:text="Tanggal"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/if_sp_bulan"
                android:fontFamily="@font/roboto_bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="----------"/>
            <Button
                android:id="@+id/if_bt_bulan"
                android:layout_weight="3"
                android:textColor="#fff"
                android:text="Bulan"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#707070"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Catatan Jika pilih bulan maka pencarian dengan bulan dan tahun saat ini"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>